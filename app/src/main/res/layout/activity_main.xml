<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/index"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textJudul"
        android:text="CALCULATOR IPK"
        android:textSize="15sp"
        android:layout_below="@+id/foto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textJudul"
        android:id="@+id/layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout1"
            android:weightSum="3"
            android:layout_below="@+id/textJudul"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight=""
                android:text="NAMA" />
            <EditText
                android:id="@+id/inputNama"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:hint="@string/Nama"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout2"
            android:weightSum="3"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textNIM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="NIM" />
            <EditText
                android:id="@+id/inputNIM"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:hint="@string/Nim"
                android:inputType="number"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout3"
            android:weightSum="3"
            android:layout_below="@+id/layout2"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textJurusan"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="JURUSAN" />

            <Spinner
                android:id="@+id/inputJurusan"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"></Spinner>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout"
        android:id="@+id/layout4">

        <LinearLayout
            android:layout_width="124dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <EditText
                android:id="@+id/inputMatkul1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:hint="@string/matkul" />

            <EditText
                android:id="@+id/inputMatkul2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:hint="@string/matkul" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <EditText
                android:id="@+id/inputSks1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:hint="@string/sks"
                android:inputType="number" />

            <EditText
                android:id="@+id/inputSks2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:hint="@string/sks"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <EditText
                android:id="@+id/inputUts1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:hint="@string/uts"
                android:inputType="number" />

            <EditText
                android:id="@+id/inputUts2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:hint="@string/uts"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <EditText
                android:id="@+id/inputUas1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:hint="@string/uas"
                android:inputType="number" />

            <EditText
                android:id="@+id/inputUas2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:hint="@string/uas"
                android:inputType="number" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="153dp"
        android:textSize="15dp"
        android:text="Button" />

    <TextView
        android:id="@+id/textKHS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-156dp"
        android:textColor="@color/blue"
        android:text="-KHS-" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/hasil1"
        android:layout_below="@+id/textKHS"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hasilNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/hasilNIM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:id="@+id/hasilJurusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/hasil2"
        android:layout_below="@+id/hasil1"
        android:layout_marginBottom="96dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hasilMatkul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/hasilSKS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/hasilNilai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/hasil3"
        android:layout_below="@+id/hasil2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hasilMatkul1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/hasilSKS1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/hasilAlpha1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/hasil4"
        android:layout_below="@+id/hasil3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hasilMatkul2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/hasilSKS2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/hasilAlpha2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/hasil5"
        android:layout_below="@+id/hasil4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hasilIPK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textColor="@color/green"/>
    </LinearLayout>

</RelativeLayout>